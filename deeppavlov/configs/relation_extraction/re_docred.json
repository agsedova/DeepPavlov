{
  "dataset_reader": {
    "class_name": "docred_reader",
    "data_path": "{DOWNLOADS_PATH}/docred/",
    "rel2id_path": "{DOWNLOADS_PATH}/docred/meta/rel2id.json"
  },
  "dataset_iterator": {
    "class_name": "basic_classification_iterator"
  },
  "chainer": {
    "in": ["input_x"],
    "in_y": ["y_ids"],
    "pipe": [
      {
        "in": ["input_x"],
        "out": ["input_x_bert"],
        "class_name": "torch_transformers_re_preprocessor",
        "vocab_file": "bert-base-uncased"
      },
      {
        "class_name": "re_torch_transformers_classifier",
        "in": ["input_x_bert"],
        "in_y": ["y_ids"],
        "out": ["predictions"],
        "n_classes": 97,
        "save_path": "{MODELS_PATH}/model",
        "load_path": "{MODELS_PATH}/model",
        "model_name": "re_model",
        "pretrained_bert": "bert-base-uncased"
      }
    ],
    "out": ["predictions"]
  },
  "train": {
    "epochs": 50,
    "batch_size": 32,
    "train_metrics": ["f1_weighted", "acc"],
    "metrics": ["f1_weighted", "acc"],
    "validation_patience": 50,
    "val_every_n_batches": 10,
    "log_every_n_batches": 10,
    "evaluation_targets": ["valid", "train"],
    "show_examples": false,
    "class_name": "torch_trainer"
  },
  "metadata": {
    "variables": {
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models/re_docred"
      },
    "download": [
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/relation_extraction/docred.tar.gz",
        "subdir": "{DOWNLOADS_PATH}/docred"
      }
    ]
  }
}
