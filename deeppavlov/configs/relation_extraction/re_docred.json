{
  "dataset_reader": {
    "class_name": "docred_reader",
    "data_path": "{DOWNLOADS_PATH}/docred",
    "rel2id_path": "{DOWNLOADS_PATH}/docred/meta/rel2id.json"
  },
  "dataset_iterator": {
    "class_name": "basic_classification_iterator"
  },
  "chainer": {
    "in": ["input_x", "entity_pos_ner"],
    "in_y": ["y_ids"],
    "pipe": [
      {
        "in": ["input_x", "entity_pos_ner"],
        "out": ["input_ids", "attention_mask", "entity_pos", "ner_tags"],
        "class_name": "torch_transformers_re_preprocessor",
        "vocab_file": "bert-base-uncased"
      },
      {
        "class_name": "re_torch_transformers_classifier",
        "in": ["input_ids", "attention_mask", "entity_pos", "ner_tags"],
        "in_y": ["y_ids"],
        "out": ["predictions"],
        "n_classes": 97,
        "save_path": "{MODELS_PATH}/model",
        "load_path": "{MODELS_PATH}/model",
        "model_name": "re_model",
        "pretrained_bert": "bert-base-uncased"
      }
    ],
    "out": ["predictions"]
  },
  "train": {
    "epochs": 50,
    "batch_size": 32,
    "train_metrics": ["f1", "acc"],
    "metrics": ["f1", "acc"],
    "validation_patience": 5,
    "val_every_n_epochs": 1,
    "log_every_n_epochs": 1,
    "evaluation_targets": [
      "valid",
      "train"
    ],
    "show_examples": false,
    "class_name": "torch_trainer"
  },
  "metadata": {
    "variables": {
      "ROOT_PATH": "/home/anastasiia/.deeppavlov/",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models"
      }
  }
}